[Desktop Entry]
Exec=ormatrix
Icon=kscreensaver
Type=Service
X-KDE-ServiceTypes=ScreenSaver
TryExec=xscreensaver
Actions=InWindow;Root;Setup;
X-KDE-Category=OpenGL Screen Savers
X-KDE-Type=OpenGL
Name=Oriya Matrix

[Desktop Action Setup]
Exec=kxsconfig ormatrix
Name=Setup...



[Desktop Action InWindow]
Exec=kxsrun ormatrix -- -window-id %w
Name=Display in Specified Window
NoDisplay=true

[Desktop Action Root]
Exec=kxsrun ormatrix -- -root
Name=Display in Root Window

NoDisplay=true
